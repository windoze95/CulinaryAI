<!DOCTYPE html>
<html lang="en">

<head>
    {{ template "head" . }}
</head>

<body>
    <header>
        {{ template "header" . }}
    </header>

    <div class="container">
        <h1>THIS IS UNDER DEVELOPMENT</h1>
        <h1>COME BACK IN A WEEK</h1>
        <!-- Main App -->
        {{ if .User }}
        <div class="input-group mb-3">
            <form>
                <label for="user-prompt-input">Supplimental prompt (optional):</label><br>
                <input type="text" id="user-prompt-input" placeholder="ex: Something with beef, Five-course meal"
                    aria-label="ex: Something with beef, Five-course meal" aria-describedby="button-addon2">
                <div class="input-group-append">
                    <button class="btn" type="button" id="generate-recipe-button">Generate</button>
                    <!-- <button class="btn" type="button" id="button2">Button 2</button> -->
                </div>
            </form>
        </div>
        <div id="markdown-display" class="markdown-display rounded p-3 bg-black">
            <!-- Markdown content will be inserted here -->
        </div>
        {{ end }}
    </div>

    <div id="settingsModal" class="modal">
        <div id="settingsContent" class="modal-content"></div>
        <div class="modal-footer">
            <button id="saveSettings" class="waves-effect waves-green btn-flat">Save</button>
        </div>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
    <!-- Custom JS -->
    <script src="/static/app.js"></script>
</body>

</html>